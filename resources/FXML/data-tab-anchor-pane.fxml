<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TreeView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="572.0" prefWidth="693.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox layoutY="-1.0" prefHeight="572.0" prefWidth="693.0">
         <children>
            <TreeView fx:id="treeView" prefHeight="518.0" prefWidth="694.0" />
            <FlowPane alignment="CENTER" prefHeight="99.0" prefWidth="694.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#export" text="Export">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#expandAll" text="Expand All">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                  </Button>
                  <Button mnemonicParsing="false" onAction="#collapseAll" text="Collapse All" />
                  <Button fx:id="validateDataButton" mnemonicParsing="false" onAction="#validateDataButtonHandler" text="Refresh and Validate Data">
                     <FlowPane.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </FlowPane.margin>
                  </Button>
                  <Label fx:id="selectedCompetitionLabel" text="No Competition Selected" />
               </children>
            </FlowPane>
         </children>
      </VBox>
   </children>
